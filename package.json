{
  "$schema": "http://json.schemastore.org/package",
  "name": "taiko-workspace",
  "version": "1.4.8",
  "description": "Taiko workspace for browser automation",
  "private": true,
  "workspaces": [
    "packages/*",
    "tests"
  ],
  "scripts": {
    "lint:check": "npm run lint:check --workspace=packages/taiko",
    "lint:fix": "npm run lint:fix --workspace=packages/taiko",
    "doc": "npm run doc --workspace=packages/taiko",
    "doc:serve": "npm run doc:serve --workspace=packages/taiko",
    "doc:api": "npm run doc:api --workspace=packages/taiko",
    "test:api": "npm run test:api --workspace=tests",
    "examples": "npm run test --workspace=packages/examples",
    "test:unit:silent": "npm run test:unit:silent --workspace=tests",
    "test:unit": "npm run test:unit --workspace=tests",
    "test": "npm run test --workspace=tests",
    "test-functional": "npm run test-functional --workspace=tests",
    "test-docs": "npm run test-docs --workspace=tests"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/getgauge/taiko.git"
  },
  "keywords": [
    "headless",
    "headless-chrome",
    "headless-testing",
    "headless-browser"
  ],
  "author": "getgauge",
  "license": "MIT",
  "lint-staged": {
    "**/*.{js,ts}": [
      "npm run lint:fix",
      "git add"
    ]
  },
  "devDependencies": {
    "husky": "^8.0.3",
    "lint-staged": "^16.2.7",
    "mocha": "^10.4.0",
    "ncp": "^2.0.0",
    "rewire": "^9.0.1",
    "sinon": "^15.0.1",
    "typescript": "^4.9.4"
  }
}
